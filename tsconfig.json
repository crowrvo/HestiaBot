{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": false,
    "noImplicitThis": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "./src/Types/*.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "Tests"
  ],
  "exclude": [
    "node_modules",
    ".vscode",
    ".git",
    ".env"
  ]
}